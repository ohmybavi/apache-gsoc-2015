.tag-list--tag 
  display: inline-block;
  position: relative;
  line-height: 2em;
  padding: 0 5px
  margin: 5px
  background-color: #fff
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.12)
  user-select: none
  border-radius: 2px
  cursor: pointer
  transition: 0.2s ease-in

.tag-list--tag:hover
.tag-list--tag.is-active
  background-color: #e51c23
