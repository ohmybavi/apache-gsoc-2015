@import "../../fonts/css/fontello.css"

* {
  box-sizing: border-box;
}

body {
  font-family: "Roboto", Helvetica, sans-serif;
  margin: 0
}

.main 
  position: relative
  max-width: 960px
  margin: 0 auto

.main--cover
  user-select: none
  background-color: #3f51b5

.main--header {
  text-align: center;
  margin: 0
  line-height: 3em
  font-weight: 400
  color: #fafafa
}

.main--toolbar
  user-select: none
  height: 3em
  line-height: 3em
  background-color: #303f9f
  padding: 0 10px
  position: relative
  color: #fff

.main--count
  display: inline-block
  line-height: 2em


.show-tags--toggle {
  width: 0;
  height: 0;
  display: none;
}

.main--show-tags {
  float: right
  cursor: pointer;
  user-select: none;
  border-bottom: 1px dashed #fff
  height: 2.3em
}

.main--reset-tags {
  cursor: pointer;
  border-bottom: 1px dashed #fff
  height: 2.3em
}

.main--toggle-tags
  width: 0
  height: 0
  display: none


.main--tag-list
  margin: 0
  padding: 0
  background-color: #fafafa  
  display: none


.main--toggle-tags:checked ~ .main--tag-list
  display: block


.main--show-tags:before
  content: "Show "
  
.main--toggle-tags:checked ~ .main--toolbar .main--show-tags:before
  content: "Hide "
  
.main--list 
  padding: 0
  list-style: none


