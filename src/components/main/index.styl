@import "../../fonts/css/fontello.css"

* {
  box-sizing: border-box;
}

body {
  font-family: "Roboto", Helvetica, sans-serif;
  margin: 0
}

.main 
  position: relative
  max-width: 960px
  margin: 0 auto

.main--cover
  user-select: none
  background-color: #3f51b5
  font-size: 80%
  padding: 48px 0 32px 
  +above(700px)
    padding: 96px 0 64px 
    font-size: 100%

h1.main--header
  font-size: 2em
  line-height: 1.2em
  margin-bottom: 1em
  +above(700px)
    margin-bottom: 0 
    line-height: 1.6em
    font-size: 3em
  
h2.main--header
  font-size: 1.5em
  +above(700px)
    font-size: 2.25em

.main--header {
  text-align: center;
  margin: 0
  font-weight: 400
  color: #fafafa
}

.main--toolbar
  user-select: none
  background-color: #303f9f
  position: relative
  color: #fff
  font-size: 1em
  padding: 12px
  +above(700px)
    padding: 24px
    font-size: 1.5em

.main--count
  display: inline-block
  line-height: 2em


.show-tags--toggle {
  width: 0;
  height: 0;
  display: none;
}

.main--show-tags {
  float: right
  cursor: pointer;
  user-select: none;
  border-bottom: 1px dashed #fff
  line-height: 2em
  height: 2em
}

.main--reset-tags {
  cursor: pointer;
  border-bottom: 1px dashed #fff
  height: 1.6em
}

.main--toggle-tags
  width: 0
  height: 0
  display: none


.main--tag-list
  margin: 0
  padding: 0
  background-color: #fafafa  
  display: none

.main--toggle-tags:checked ~ .main--tag-list
  display: block


.main--show-tags:before
  content: "Show "
  
.main--toggle-tags:checked ~ .main--toolbar .main--show-tags:before
  content: "Hide "
  
.main--list 
  padding: 0
  list-style: none


