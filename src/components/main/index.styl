* {
  box-sizing: border-box;
}

body {
  font-family: Helvetica, sans-serif;
  margin: 0
}

.main 
  position: relative
  max-width: 960px
  margin: 0 auto

.main--header {
  text-align: center;
}

.main--toolbar
  height: 3em
  line-height: 3em
  background-color: aquamarine
  padding: 0 10px
  position: relative

.main--count
  display: inline-block
  line-height: 2em


.show-tags--toggle {
  width: 0;
  height: 0;
  display: none;
}

.main--show-tags {
  float: right
  cursor: pointer;
  user-select: none;
}

.main--reset-tags {
  cursor: pointer;
}




