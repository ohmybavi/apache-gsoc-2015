.list--project
  box-shadow: 0 1px 6px rgba(0, 0, 0, 0.12)
  margin: 10px 0
  padding: 0 10px

.list--project--title
  text-align: center
  font-size: 1.2em
  +above(700px)
    font-size: 1.5em

.list--project--proposals
  margin: 0
  padding: 0
  list-style: none


.list--trigger {
  display: none;
  width: 0;
  height: 0;
}

.list--trigger:checked ~ .list--detail 
  display: block

.list--label:before
  font-family: "fontello";
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  margin-right: .2em;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
  margin-left: .2em;
  content: "\e801" 

.list--trigger:checked ~ .list--label:before
  content: "\e802" 

.list--project--proposal
  list-style: none

.list--label 
  line-height: 2em
  cursor: pointer
  user-select: none
  font-size: 1em
  +above(700px)
    font-size: 1.4em
  

.list--detail {
  display: none;
  padding: 0 30px
}

.list--link
  text-decoration: none
  color: #e51c23

