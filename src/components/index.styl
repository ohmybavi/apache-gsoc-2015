* {
  box-sizing: border-box;
}


@-webkit-keyframes bugfix {
  from {padding: 0;}
  to {padding: 0;}
}

body {
  font-family: Helvetica, sans-serif;
  -webkit-animation: bugfix infinite 1s;
}

.main--header {
  text-align: center;
}

.main--show-tags,
.main--filter-by-title {
  position: relative;
}

.show-tags--toggle {
  width: 0;
  height: 0;
  display: none;
}


.show-tags--trigger {
  cursor: pointer;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1em;
  user-select: none;
}

.show-tags--toggle:checked ~ .show-tags--tags {
  display: block;
}

.show-tags--tags {
  display: none;
}


.tags--clear {
  cursor: pointer;
}

.tag-list--tag {
  display: inline-block;
  width: 25%;
  position: relative;
  line-height: 1.4em;
}

.tag--add, 
.tag--remove {
  cursor: pointer;
}

.tag--remove {
  color: red;
  position: absolute;
  left: -15px;
}


.tag--trigger {
  display: none;
  width: 0;
  height: 0;
}



.list {
  padding: 0;
  list-style: none;
}

.list-trigger {
  display: none;
  width: 0;
  height: 0;
}

.list-trigger:checked ~ .list-detail {
  display: block;
}

.list-label {
  font-size: 1.4em;
  line-height: 2em;
  cursor: pointer;
}

.list-detail {
  display: none;
}

.detail-tags {
  padding: 0;
  list-style: none;
}

.detail-tag {
  display: inline;
  cursor: pointer;
}
